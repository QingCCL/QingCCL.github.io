---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}
	 class="text-gray-500 dark:text-gray-400 text-xs font-medium tracking-wide"
>
	{
		date.toLocaleDateString('zh-cn', {
			year: 'numeric',
			month: 'numeric',
			day: 'numeric',
		})
	}
</time>
